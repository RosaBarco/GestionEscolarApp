@page
@model GestionApp.Pages.Profesores.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Profesores</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Profesor[0].NombreProfesor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesor[0].ApellidoProfesor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesor[0].MatriculaProfesor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Profesor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProfesor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoProfesor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatriculaProfesor)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
